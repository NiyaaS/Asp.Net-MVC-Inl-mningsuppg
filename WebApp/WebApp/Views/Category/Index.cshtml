@model WebApp.ViewModels.CategoryIndexViewModel
@{
    ViewBag.Title = "Category";
}

<h2>Categories</h2>

<p>
    @Html.ActionLink("Create New Category", "Create")
</p>
<table class="table">
<thead>
    <tr>
        <th>ID</th>
        <th>Category</th>
        <th></th>
    </tr>
</thead>
    @foreach (var item in Model.Categorys)
    {
    <tr>
        
        <td>@item.Id</td>
     
        <td>@item.Name</td>
        @if (Request.IsAuthenticated)
        {
            <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</td>
        }
        <td>
            @Html.ActionLink("View Products", "Index","Product", new { id = item.Id }, null)
        </td>
    </tr>
    }
</table>